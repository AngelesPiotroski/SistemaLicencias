<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  
     <class name="modelo.Empleado"  table="Empleado" schema="public" optimistic-lock="version">
     <id name="IdEmpleado" column="ID_EMPLEADO"   type="long"> <generator class="native" /> </id>
    
    <property name="nroLegajo" column="NROLEGAJO" type="Integer">    </property>
    <property name="nombre" column="NOMBRE" type="String">    </property>
    <property name="apellido" column="APELLIDO" type="String">    </property>
    <property name="antiguedadEmpleado" column="ANTIGUEDADEMPLEADO" type="Calendar">    </property>
    
    
</hibernate-mapping>
